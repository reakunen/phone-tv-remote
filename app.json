{
  "expo": {
    "name": "TV Remote",
    "slug": "tv-remote",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "dark",
    "ios": {
      "supportsTablet": false,
      "infoPlist": {
        "NSLocalNetworkUsageDescription": "Allow local network access to discover and control TVs on your Wi-Fi.",
        "NSAppTransportSecurity": {
          "NSAllowsLocalNetworking": true
        }
      },
      "bundleIdentifier": "com.dormme.tv-remote"
    },
    "web": {
      "bundler": "metro"
    }
  }
}
